 apiVersion: apps/v1
kind: Deployment
metadata:
  name: haproxy
spec:
  selector:
    matchLabels:
      app: haproxy
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: haproxy
    spec:
      containers:
      - name: haproxy
        image: localhost:32000/nginx-haproxy-docker_haproxy:registry
        ports:
          - containerPort: 80
            protocol: TCP
          - containerPort: 88
            protocol: TCP
          - containerPort: 8080
            protocol: TCP
        env:
          - name: NGINX_1_IP
            value: 1.1.1.1
          - name: NGINX_2_IP
            value: 1.1.1.1
          - name: NGINX_EXPOSED_PORT
            value: 1.1.1.1

